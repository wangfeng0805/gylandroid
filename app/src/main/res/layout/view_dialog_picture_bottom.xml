<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/defult_bg_color"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_measure_260dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:paddingTop="@dimen/common_measure_46dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/icon_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="相册"
                android:textColor="@color/black2"
                android:layout_marginTop="@dimen/common_measure_8dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:paddingTop="@dimen/common_measure_46dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/icon_shot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/common_measure_8dp"
                android:text="拍摄"
                android:textColor="@color/black2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:paddingTop="@dimen/common_measure_46dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/icon_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="文件夹"
                android:textColor="@color/black2"
                android:layout_marginTop="@dimen/common_measure_8dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:text="取 消"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/black2"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_56dp" />


</LinearLayout>