<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_topbar"/>

    <ImageView
        android:src="@mipmap/step_01"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/login_activity_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_60dp"
        android:background="@drawable/style_rect_fillet_filling_golden"
        android:layout_marginLeft="@dimen/common_measure_20dp"
        android:layout_marginRight="@dimen/common_measure_20dp"
        android:layout_marginTop="@dimen/common_measure_50dp"
        android:layout_marginBottom="@dimen/common_measure_20dp"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/common_measure_22dp"/>

</LinearLayout>
