<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/defult_bg_color">

    <include layout="@layout/common_topbar"/>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/common_measure_6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_picture"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingBottom="@dimen/common_measure_18dp"
            android:paddingTop="@dimen/common_measure_18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="@dimen/common_measure_12dp"
                android:layout_marginRight="@dimen/common_measure_6dp"
                android:id="@+id/btn_before"
                android:layout_gravity="center_horizontal"
                android:text="上一步"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/btn_send_selector"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/common_measure_52dp" />

            <TextView
                android:layout_marginLeft="@dimen/common_measure_6dp"
                android:layout_marginRight="@dimen/common_measure_12dp"
                android:id="@+id/btn_push"
                android:layout_gravity="center_horizontal"
                android:text="提交审核"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/btn_send_selector"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/common_measure_52dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
