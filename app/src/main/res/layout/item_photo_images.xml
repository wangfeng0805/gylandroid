            android:layout_width="@dimen/common_measure_160dp"
            android:layout_height="@dimen/common_measure_200dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_look_picture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_measure_2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_look_normal"
                android:gravity="center"
                android:padding="@dimen/common_measure_5dp"
                android:text="查看大图"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_delete_picture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_measure_2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_delete_normal"
                android:gravity="center"
                android:padding="@dimen/common_measure_5dp"
                android:text="删除"
                android:textColor="@color/common_color"
                android:textSize="10sp" />

        </LinearLayout>

