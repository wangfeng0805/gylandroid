<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/defult_bg_color">

    <include layout="@layout/common_topbar"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_marginTop="@dimen/common_measure_2dp"
        android:background="@color/white"
        android:padding="@dimen/common_measure_28dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:text="企业基本资料包括 《营业执照（正本）》、公司法人的身份证（正/反面）和《银行开户许可证》。请在以下指定位置完成材料的上传，并在完成后点击“提交审核”按钮"
            android:lineSpacingExtra="@dimen/common_measure_6dp"
            android:textColor="@color/black2"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/common_measure_12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_240dp">

            <RelativeLayout
                android:layout_marginLeft="@dimen/common_measure_18dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/common_measure_160dp"
                    android:layout_height="@dimen/common_measure_200dp">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@color/common_color2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:text="点击上传《营业执照》"
                        android:padding="@dimen/common_measure_8dp"
                        android:lineSpacingExtra="@dimen/common_measure_6dp"
                        android:textColor="@color/black2"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </FrameLayout>

                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="查看大图"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/common_measure_18dp"
                        android:layout_marginRight="@dimen/common_measure_6dp"
                        android:padding="@dimen/common_measure_5dp"
                        android:background="@drawable/btn_send_normal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="删除"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/common_color"
                        android:layout_marginLeft="@dimen/common_measure_6dp"
                        android:layout_marginRight="@dimen/common_measure_18dp"
                        android:padding="@dimen/common_measure_5dp"
                        android:background="@drawable/btn_look_normal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginRight="@dimen/common_measure_18dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/common_measure_200dp">

                <FrameLayout
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/common_measure_160dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@color/common_color2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:gravity="center"
                        android:text="点击上传公司法人的身份证（正面）"
                        android:padding="@dimen/common_measure_8dp"
                        android:lineSpacingExtra="@dimen/common_measure_6dp"
                        android:textColor="@color/black2"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </FrameLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/common_measure_12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_200dp">

            <RelativeLayout
                android:layout_marginLeft="@dimen/common_measure_18dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/common_measure_160dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@color/common_color2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:gravity="center"
                        android:padding="@dimen/common_measure_8dp"
                        android:lineSpacingExtra="@dimen/common_measure_6dp"
                        android:text="点击上传公司法人的身份证（反面）"
                        android:textColor="@color/black2"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginRight="@dimen/common_measure_18dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/common_measure_160dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@color/common_color2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:text="点击上传公司的银行卡户许可证"
                        android:padding="@dimen/common_measure_8dp"
                        android:lineSpacingExtra="@dimen/common_measure_6dp"
                        android:gravity="center"
                        android:textColor="@color/black2"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </FrameLayout>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/common_measure_12dp"
            android:layout_marginRight="@dimen/common_measure_6dp"
            android:layout_marginBottom="@dimen/common_measure_22dp"
            android:id="@+id/btn_next"
            android:layout_gravity="center_horizontal"
            android:text="上一步"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/btn_send_selector"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/common_measure_46dp" />

        <TextView
            android:layout_marginLeft="@dimen/common_measure_6dp"
            android:layout_marginRight="@dimen/common_measure_12dp"
            android:layout_marginBottom="@dimen/common_measure_22dp"
            android:id="@+id/btn_next"
            android:layout_gravity="center_horizontal"
            android:text="提交审核"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/btn_send_selector"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/common_measure_46dp" />

    </LinearLayout>


</LinearLayout>
